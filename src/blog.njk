---
title: 'Blog: Latest conference updates'
pagination:
    data: collections.blog
    size: 10
    alias: blog
    reverse: true
tags: nav
navTitle: 'Blog'
navOrder: 30
---

{% extends "_layouts/base.njk" %}

{% block main %}

    <div class="o-hero-header o-spacer o-spacer--super@lg c-raised--hero-gradient c-inverted">

        <header class="o-hero-header__copy o-wrapper">

            <h1 class="c-inverted">Blog</h1>
            <span class="c-subheading">Latest conference updates from the team</span>

        </header>

    </div>

    <div class="o-wrapper o-spacer">

        {% for post in blog %}
            {% set teaser = { level: 'h2' } %}
            {% include "_teaser/blog.njk" %}
        {% endfor %}

    </div> {# /.o-wrapper.o-spacer #}

    {# Only show pagination when required #}
    {% if pagination.hrefs | length > 1 %}

        {# TODO: Style this from `o-pagination-links` before we write too many posts! #}
        <nav aria-label="pagination">
            {{ ('<a href="' ~ pagination.previousPageHref ~ '">Newer posts</a>' if pagination.previousPageHref) | safe }}
            {{ ('<a href="' ~ pagination.nextPageHref ~ '">Older posts</a>' if pagination.nextPageHref) | safe }}
        </nav>

    {% endif %}

{% endblock %}
