{#
    External links list
#}

{% import "_macros/icons.njk" as icons %}

<ul class="o-menu">
    {% for item in external %}
        <li class="o-menu__item">
            {# My kingdom for a switchâ€¦ #}
            {% if item.twitter %}
                {{ icons.iconItem(item.twitter, 'twitter') }}
            {% elseif item.github %}
                {{ icons.iconItem(item.github, 'github') }}
            {% elseif item.website %}
                {{ icons.iconItem(item.website) }}
            {% endif %}
        </li>
    {% endfor %}
</ul>
