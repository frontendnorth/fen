<article class="c-teaser">
    <h3 class="c-teaser__title">
        <a href="{{ post.url }}">{{ post.data.title }}</a>
    </h3>
    <time class="c-teaser__meta" datetime="{{ post.date|htmlDateString }}">{{ post.date | readableDate }}</time>
    <div class="c-teaser__excerpt">
        <p>
            {# Use body copy as excerpt unless frontmatter available  #}
            {% set teaser_length = 200 %}
            {% if post.data.excerpt %}
                {{ post.data.excerpt | striptags(true) | truncate(teaser_length) }}
            {% else %}
                {{ post.data.intro | striptags(true) | truncate(teaser_length) if post.data.intro else post.templateContent | striptags(true) | truncate(teaser_length) }}
            {% endif %}
        </p>
    </div>
</article>
