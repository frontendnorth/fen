<article class="c-teaser c-teaser--speaker{{ ' c-teaser--inverted' if inverted }}">
    <div class="c-teaser__text">
        <h3 class="c-teaser__title">
            <a href="{{ speaker.url }}">{{ speaker.data.title }}</a>
        </h3>
        {% if speaker.data.role %}
            <span class="c-teaser__meta c-teaser__meta--important">
                {{ speaker.data.role }}
            </span>
        {% endif %}
    </div>
    {% if speaker.data.image %}
        <div class="c-teaser__image">
            <img
                src="{{ site.image_cdn }}{{ speaker.data.image }}?thumbnail=100"
                alt="">
        </div>
    {% endif %}
</article>
