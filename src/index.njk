---
title: Homepage
---
{# layout: base.njk #}
{% extends "_layouts/base.njk" %}

{% block main %}

    <header class="o-spacer c-raised--hero-gradient c-inverted">

        <div class="o-hero-header">
            <div class="o-hero-header__logo">

                <h1 class="c-logo">
                    <img src="/assets/img/logo-inv.svg" alt="" aria-hidden="true">
                    <span class="c-logo__text">Front End North</span>
                </h1>

            </div>
            <div class="o-hero-header__intro">

                <p class="c-lede">
                    <strong>The Crucible, Sheffield UK - February&nbsp;2020</strong><br>
                    A welcoming one-track, one-day conference for <strong>developers and designers</strong> who work on the&nbsp;web.
                </p>

            </div>

            <div class="o-hero-header__social">
                <span class="c-lede"><strong>Stay in touch:</strong></span>

                <a href="https://twitter.com/frontendnorth" target="_blank" rel="noopener noreferrer nofollow" title="Follow us on Twitter" class="c-social">
                    <span class="u-visually-hidden">Twitter</span>
                    <svg aria-hidden="true" role="presentation" class="c-icon">
                        <use href="#twitter"></use>
                    </svg>
                </a>

                <a href="https://www.facebook.com/Front-End-North-502356493635369" target="_blank" rel="noopener noreferrer nofollow" title="Like us on Facebook" class="c-social">
                    <span class="u-visually-hidden">Facebook</span>
                    <svg aria-hidden="true" role="presentation" class="c-icon">
                        <use href="#facebook"></use>
                    </svg>
                </a>

                <a href="https://www.instagram.com/frontendnorth/" target="_blank" rel="noopener noreferrer nofollow" title="Follow us on Instagram" class="c-social">
                    <span class="u-visually-hidden">Instagram</span>
                    <svg aria-hidden="true" role="presentation" class="c-icon">
                        <use href="#instagram"></use>
                    </svg>
                </a>

            </div>
            <div class="o-hero-header__signup">

                <!-- Begin Mailchimp Signup Form -->
                <div id="mc_embed_signup">
                    <form action="https://frontendnorth.us7.list-manage.com/subscribe/post?u=d4b4d9d8bcd950567cd7e36cd&amp;id=6c310da9f2" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate c-compact-form" target="_blank" novalidate>
                        <label for="mce-EMAIL" class="c-compact-form__label">Your email address</label>
                        <input type="email" value="" placeholder="Your email address&hellip;" name="EMAIL" class="c-compact-form__field required email" id="mce-EMAIL">
                        <div class="form__messages" id="mce-responses">
                            <div class="response" id="mce-error-response" style="display:none"></div>
                            <div class="response" id="mce-success-response" style="display:none"></div>
                        </div>
                        <div class="c-button c-button--pop c-compact-form__action">
                            <input type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe">
                            <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                            <div style="position: absolute; left: -5000px;" aria-hidden="true"><label for="hp">This field is for validation and should not be changed</label><input type="text" name="b_d4b4d9d8bcd950567cd7e36cd_6c310da9f2" tabindex="-1" value="" id="hp"></div>
                        </div>
                    </form>
                </div>
                <script type='text/javascript' src='https://s3.amazonaws.com/downloads.mailchimp.com/js/mc-validate.js'></script><script type='text/javascript'>(function($) {window.fnames = new Array(); window.ftypes = new Array();fnames[0]='EMAIL';ftypes[0]='email';fnames[3]='ADDRESS';ftypes[3]='address';fnames[4]='PHONE';ftypes[4]='phone';}(jQuery));var $mcj = jQuery.noConflict(true);</script>
                <!--End mc_embed_signup-->

            </div>
        </div>

    </header>

    <main class="o-wrapper">

        <section class="o-spacer">

            <div class="s-content">

                <h2>Sponsorship</h2>
                <p>
                    Weâ€™re currently offering sponsorship packages for Front End North 2020. Find out more about our sponsorship packages or get in touch at <a href="mailto:admin@frontendnorth.com" rel="author">admin@frontendnorth.com</a>.
                </p>
                <a href=".pdf" type="application/pdf" class="c-button">Download our sponsor pack</a>

            </div>

            <h3>Our sponsors:</h3>

            <div class="o-sponsor-grid">
                {%- for sponsor in sponsors -%}
                    {{ ('<a href="' ~ sponsor.url ~ '" rel="external" title="' ~ sponsor.name ~ '">' if sponsor.url) | safe }}
                        <span class="u-visually-hidden">{{ sponsor.name }}</span>
                        <img src="{{ site.image_folder }}sponsors/{{ sponsor.logo }}" alt="">
                    {{ ('</a>' if sponsor.url) | safe }}
                {%- endfor -%}
            </div>

        </section>

        <section class="o-spacer">

            <h2>Blog</h2>

            {% for post in collections.blog | reverse | limit(2) %}
                <article class="c-teaser">
                    <h3 class="c-teaser__title">
                        <a href="{{ post.url }}">{{ post.data.title }}</a>
                    </h3>
                    <time class="c-teaser__meta" datetime="{{ post.date|htmlDateString }}">{{ post.date|readableDate }}</time>
                    <div class="c-teaser__excerpt">
                        <p>
                            {# Use body copy as excerpt unless frontmatter available  #}
                            {{ post.data.excerpt if post.data.excerpt else post.templateContent | striptags(true) | truncate(200) }}
                        </p>
                    </div>
                </article>
            {% endfor %}

        </section>

    </main>

    <footer>

        <div class="o-wrapper">

            <small class="c-reduced">Front End North Ltd. | Registered company 11851024</small>

        </div>

    </footer>

{% endblock %}
