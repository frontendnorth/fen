{# layout: base.njk #}
{% extends "_layouts/base.njk" %}

{% block main %}

    <header class="o-hero-header o-spacer c-raised--hero-gradient c-inverted">

        <div class="o-wrapper o-hero-header__copy">
            <div class="o-hero-header__logo">

                <h1 class="c-logo">
                    <img src="/assets/img/logo-inv.svg" alt="" aria-hidden="true" class="c-logo__hero">
                    <img src="/assets/img/logo-inv-stacked.svg" alt="" aria-hidden="true" class="c-logo__stacked">
                    <span class="c-logo__text">Front End North</span>
                </h1>

            </div>
            <div class="o-hero-header__intro">

                <p class="c-lede">
                    <strong class="u-uppercase">
                        7th&nbsp;February, 2020<br>
                        The Crucible Sheffield,&nbsp;UK
                    </strong><br>
                    A welcoming one-track, one-day conference for <strong>developers and designers</strong> who work on the&nbsp;web.
                </p>

                {# <div class="o-hero-header__action">
                    <a href="" class="c-button c-button--split">
                        Buy tickets now
                        <strong class="c-button__emphasis">&pound;110</strong>
                    </a>
                </div> #}

            </div>

            <div class="o-hero-header__social">
                <span class="c-lede"><strong>Stay in touch:</strong></span>

                {% set social = [
                    {
                        name: "Twitter",
                        url: "https://twitter.com/frontendnorth",
                        icon: "twitter",
                        title: "Follow us on Twitter"
                    },
                    {
                        name: "Facebook",
                        url: "https://www.facebook.com/Front-End-North-502356493635369",
                        icon: "facebook",
                        title: "Like us on Facebook"
                    },
                    {
                        name: "Instagram",
                        url: "https://www.instagram.com/frontendnorth/",
                        icon: "instagram",
                        title: "Follow us on Instagram"
                    }
                ] %}

                {% for service in social %}
                    <a href="{{ service.url }}" target="_blank" rel="noopener noreferrer nofollow" title="{{ service.title }}" class="c-social">
                        <span class="u-visually-hidden">{{ service.name }}</span>
                        <svg aria-hidden="true" role="presentation" class="c-icon">
                            <use href="#{{ service.icon }}"></use>
                        </svg>
                    </a>
                {% endfor %}

            </div>
            <div class="o-hero-header__signup">

                {% include "signup.njk" %}

            </div>
